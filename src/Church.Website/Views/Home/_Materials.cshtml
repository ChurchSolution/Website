        "', sLast: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageLast") +
        "', sNext: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageNext") +
        "', sPrevious: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguagePrevious") +
        "' } }";
}

<fieldset>
    <legend>@HttpContext.GetGlobalResourceObject("Framework", "Home_Materials_Legend")</legend>
    <table data-bind="dataTable: { data: materials, options: { aoColumns: @title, oLanguage: @language }}"></table>
</fieldset>

