@{
    var title = "[{ sTitle: '" + HttpContext.GetGlobalResourceObject("Framework", "Home_Materials_TitleType") +
        "' }, { sTitle: '" + HttpContext.GetGlobalResourceObject("Framework", "Home_Materials_TitleDate") +
        "' }, { sTitle: '" + HttpContext.GetGlobalResourceObject("Framework", "Home_Materials_TitleAuthor") +
        "' }, { sTitle: '" + HttpContext.GetGlobalResourceObject("Framework", "Home_Materials_TitleTitle") +
        "' }]";
    var language = "{ sLengthMenu: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageLengthMenu") +
        "' , sZeroRecords: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageZeroRecords") +
        "' , sInfo: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageInfo") +
        "' , sInfoEmpty: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageInfoEmpty") +
        "' , sInfoFiltered: '" + HttpContext.GetGlobalResourceObject("Framework", "Control_DataTable_LanguageInfoFiltered") +
